<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ExtraSigns_Base" ParentName="FurnitureBase" Abstract="True">
	<graphicData>
		<graphicClass>Graphic_Multi</graphicClass>
		<shaderType>CutoutComplex</shaderType>
		<drawSize>(1.2,1.2)</drawSize>
		<drawOffset>(0,0,0.11)</drawOffset>
	</graphicData>
	<description>A simple wooden sign designed to mark buildings, shops, or notable spots. Rotate during placement to cycle through different visuals.</description>
	<size>(1,1)</size>
	<altitudeLayer>BuildingOnTop</altitudeLayer>
	<passability>PassThroughOnly</passability>
	<defaultPlacingRot>South</defaultPlacingRot>
	<uiIconScale>0.8</uiIconScale>
	<pathCost>20</pathCost>
	<fillPercent>0.3</fillPercent>
	<canOverlapZones>false</canOverlapZones>
	<rotatable>true</rotatable>
	<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<Mass>4</Mass>
			<WorkToBuild>200</WorkToBuild>
			<Beauty>1</Beauty>
			<Flammability>1</Flammability>	
	</statBases>
	<stuffCategories>
		<li>Woody</li>
	</stuffCategories>
	<costStuffCount>40</costStuffCount>
	
	<researchPrerequisites>
		<li>ComplexFurniture</li>
	</researchPrerequisites>
	<building>
		<paintable>true</paintable>
	</building>
	<modExtensions>
			<li MayRequire="Mlie.PerspectiveBuildings" Class="Perspective.Offsetter">
			<mirror>True</mirror>
			</li>
	</modExtensions>
	</ThingDef>



